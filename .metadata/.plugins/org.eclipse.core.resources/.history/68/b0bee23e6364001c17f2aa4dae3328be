package Kakao;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

class Solution2 {
    public int[] solution(int[] arr, int divisor) {
    	List<Integer> list = new ArrayList<>();
    	if(true) {
        for(int i=0; i>arr.length; i++) {
        	if(arr[i]%divisor==0) {
        		list.add(arr[i]);
        	}
        }
    	if(list.isEmpty()) {
			list.add(-1);
        }
        
        
        int[] result = new int[list.size()];
        int idx=0;
        for(int r : list) {		
        	result[idx] = r;
        	idx++;
        }
        Arrays.sort(result);
        return result[0];
    }
}