package dataStructure01;

public class MyLinkedList {

	private MyListNode head;
	int count;

	public MyLinkedList() {
		head = null;
		count = 0;
	}

	// 1방식. 링크드리스트 첫번제 엘레먼트인 head라는애를 만들어놈. head부터 해서 쭉 하나씩 찾아가는 방식, head에 A넣고 다음에
	// B넣고...
	// 2방식. head 포인터사용하는 방법, head라는 더미를 노드가 첫번째 요소를 가리키는 역할. head 다음이 첫번째 요소이다.
	// head 빼고는 추가&삭제 모두 previous node를 알아야한다.
	public MyListNode addElement(String data) // 1방식
	{
		MyListNode newNode;

		if (head == null) {
			newNode = new MyListNode(data);
			head = newNode;
		} else {
			newNode = new MyListNode(data);
			MyListNode temp =head;
			while(temp.next != null) {
				temp = temp.next;
			}
			temp.next = newNode;
		}
		count ++;
		
		return newNode;
	}

}

